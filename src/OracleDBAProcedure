pool_build_object_relational_mapping -f mapping-template-SiStripPedestals-default.xml -o SiStripPedestals-mapping-default.xml -d CondFormatsSiStripObjects -c sqlite_file:pippo.db -b -u whoever -p whatever 

cp SiStripPedestals-mapping-default.xml SiStripPedestals-mapping-custom.xml

######################

pool_build_object_relational_mapping -f mapping-template-SiStripNoises-default.xml -o SiStripNoises-mapping-default.xml -d CondFormatsSiStripObjects -c sqlite_file:pippo.db -b -u whoever -p whatever 

cp SiStripNoises-mapping-default.xml SiStripNoises-mapping-custom.xml

###########################

pool_build_object_relational_mapping -f mapping-template-SiStripFedCabling-default.xml -o SiStripFedCabling-mapping-default.xml -d CondFormatsSiStripObjects -c sqlite_file:pippo.db -b -u whoever -p whatever 
 
cp SiStripFedCabling-mapping-default.xml SiStripFedCabling-mapping-custom.xml

